# ============================================================================
# Verarta Production Environment Configuration
# ============================================================================
# Copy this file to backend/.env and fill in the values
# ============================================================================

# ----------------------------------------------------------------------------
# Blockchain Configuration
# ----------------------------------------------------------------------------
# Get CHAIN_ID from: curl http://localhost:8888/v1/chain/get_info | jq -r .chain_id
CHAIN_ID=

# Node endpoints
HISTORY_NODE_URL=http://localhost:8888
PRODUCER_NODE_URL=http://localhost:8000
HYPERION_URL=http://localhost:7000

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://verarta:verarta@localhost:5432/verarta
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# Email Configuration (SMTP)
# ----------------------------------------------------------------------------
# For Gmail, use an App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@verarta.com
SMTP_PASS=

# From address
EMAIL_FROM=Verarta <noreply@verarta.com>

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=
JWT_EXPIRY=7d

# Session secret
# Generate with: openssl rand -hex 32
SESSION_SECRET=

# ----------------------------------------------------------------------------
# File Upload Configuration
# ----------------------------------------------------------------------------
TEMP_UPLOAD_DIR=/tmp/verarta-uploads
CHUNK_SIZE=262144
MAX_FILE_SIZE=104857600
CLEANUP_INTERVAL_HOURS=1
ABANDONED_UPLOAD_HOURS=24

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
NODE_ENV=production
PUBLIC_URL=https://verarta.com
API_URL=https://verarta.com/api

# Port for backend server
PORT=4321

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE=/var/log/verarta/app.log

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
