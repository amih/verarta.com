# ============================================================================
# Verarta Backend Environment Configuration
# ============================================================================
# Copy this file to .env and configure with your values
# ============================================================================

# ----------------------------------------------------------------------------
# Node Environment
# ----------------------------------------------------------------------------
NODE_ENV=development
PORT=4321

# ----------------------------------------------------------------------------
# Blockchain Configuration
# ----------------------------------------------------------------------------
# Get CHAIN_ID from: curl http://localhost:8888/v1/chain/get_info | jq -r .chain_id
CHAIN_ID=

# Node endpoints
HISTORY_NODE_URL=http://localhost:8888
PRODUCER_NODE_URL=http://localhost:8000
HYPERION_URL=http://localhost:7000

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://verarta:verarta@localhost:5432/verarta
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# Email Configuration (SMTP)
# ----------------------------------------------------------------------------
# For production, use a proper SMTP service
# Gmail example (requires App Password):
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_USER=your-email@gmail.com
#   SMTP_PASS=your-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# From address
EMAIL_FROM=Verarta <noreply@verarta.com>

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=
JWT_EXPIRY=7d

# Session secret
# Generate with: openssl rand -hex 32
SESSION_SECRET=

# ----------------------------------------------------------------------------
# File Upload Configuration
# ----------------------------------------------------------------------------
TEMP_UPLOAD_DIR=/tmp/verarta-uploads
CHUNK_SIZE=262144
MAX_FILE_SIZE=104857600
CLEANUP_INTERVAL_HOURS=1
ABANDONED_UPLOAD_HOURS=24

# ----------------------------------------------------------------------------
# Application URLs
# ----------------------------------------------------------------------------
PUBLIC_URL=http://localhost:4321
API_URL=http://localhost:4321/api

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# WebAuthn Configuration (for biometric authentication)
# ----------------------------------------------------------------------------
WEBAUTHN_RP_NAME=Verarta
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:4321

# ----------------------------------------------------------------------------
# Development Settings
# ----------------------------------------------------------------------------
# Enable detailed error messages in development
DEBUG=true
STACK_TRACE=true
